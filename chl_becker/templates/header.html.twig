
<header class="fixed top-0 w-full z-40 c-header-menu font-fourth">
      <nav class="bg-primary flex flex-col lg:h-12 h-16 items-center md:flex-row md:px-2 nav-top top-0 w-full">
        <div class="flex flex-no-wrap flex-row items-center justify-between md:flex-none md:self-center md:w-1/12 relative self-start w-full z-10">
          <a href="/" class="flex justify-start my-auto">
            <img class="-m-0 lg:mt-0 lg:pl-0 lg:pt-0 lg:w-1/2 logo-nav-top m-auto md:p-0 md:w-full pl-4 pt-2 w-7/12" src="/{{ directory }}/front-src/img/logo-becker-scrll.svg" alt="logo Becker">
          </a>
          <button id="menuBtn" class="block flex focus:outline-none hamburger items-center justify-center md:hidden mt-4" type="button">
            <span class="hamburger__top-bun"></span><span class="hamburger__bottom-bun"></span>
          </button>
        </div>
        <div id="menu-top" class="items-center md:flex md:flex-row md:pb-0 md:py-0 md:self-center menu-top pb-4 py-14 self-end text-white w-full hidden flex">
          {{ drupal_menu('main') }}

        <div class="lg:flex flex-1 lg:justify-end md:justify-end md:space-x-2.5">
          <div class="menu social-media lg:mt-2.5 md:mt-4">
            {% include '@chl_becker/menu/menu-social-media.html.twig'  %}
          </div>
          {% if header_embajadores == TRUE %}
          <ul class="c-header-menu-user mt-1 mx-2">
            {% if not logged_in %}
              <li> <a href="/embajadores/registro" class="bg-secondary block px-4 py-2 uppercase w-full text-center" >Registrarme </a></li>
              <li> <a href="/embajadores/login" class="block border w-full px-4 py-2 uppercase text-center " >Iniciar sesión</a></li>
            {% else %}
              <div class="relative">
                <div class="bg-white text-black flex space-x-2 items-center px-3 py-4 lg:py-0 lg:h-8 dropdown cursor-pointer justify-between">
                  <div class="w-6 h-6">
                    <img id="user-data-image" src="{{ profile_default_picture }}" alt="Perfil Becker" data-element="preview-image-file" class="w-6 h-6 rounded-full object-cover"/>
                  </div>
                  <div class="">
                    <a href="/embajadores/perfil"><p id="user-data-name" class="text-lg lg:text-xs">
                      Usuario
                    </p></a>
                  </div>
                  <div class="arrow-dropdown" data-target="profile-content">
                    <img src="/{{ directory }}/front-src/img/arrow-down.svg" class="w-3 h-auto"/>
                  </div>
                </div>
                <ul class="lg:absolute bg-white text-seventh dropdown-profile hidden" id="profile-content">
                  <li class="w-full">
                   <a href="{{ path('ch_becker.register.edit') }}" class="flex lg:px-2 py-2 uppercase w-full text-center items-center" >
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="mr-1">
                        <path d="M2.88525 17.3274V17.3274C3.12647 15.7767 4.13742 14.4391 5.65505 14.0397C6.81472 13.7346 8.29316 13.4587 9.84883 13.4587C11.4045 13.4587 12.8829 13.7346 14.0426 14.0397C15.5602 14.4391 16.5712 15.7767 16.8124 17.3274V17.3274" stroke="#6D5EF4" stroke-width="1.1606" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M9.84863 9.97717C11.9852 9.97717 13.7173 8.24512 13.7173 6.10852C13.7173 3.97192 11.9852 2.23987 9.84863 2.23987C7.71203 2.23987 5.97998 3.97192 5.97998 6.10852C5.97998 8.24512 7.71203 9.97717 9.84863 9.97717Z" stroke="#6D5EF4" stroke-width="1.1606" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      Editar mi perfil
                    </a>
                  </li>
                  <li class="w-full"> <a href="{{ path('user.logout') }}" class="w-full px-2 py-2 uppercase text-center logout flex  items-center">
                    <svg width="17" height="19" viewBox="0 0 17 19" fill="none" class="mr-1">
                      <path d="M5.82393 17.8208H2.47109C2.02648 17.8208 1.60008 17.6207 1.28569 17.2644C0.9713 16.9082 0.794678 16.425 0.794678 15.9212V2.62365C0.794678 2.11983 0.9713 1.63665 1.28569 1.28039C1.60008 0.92414 2.02648 0.723999 2.47109 0.723999H5.82393" stroke="#3E1D79" stroke-width="1.1606" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M11.6919 14.0213L15.8829 9.27219L11.6919 4.52307" stroke="#3E1D79" stroke-width="1.1606" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M15.8826 9.27246H5.8241" stroke="#3E1D79" stroke-width="1.1606" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Cerrar sesión</a>
                    </li>
                </ul>
              {% endif %}
              </div>

            {% endif %}
          </ul>
        </div>
      </div>
      </nav>
</header>
