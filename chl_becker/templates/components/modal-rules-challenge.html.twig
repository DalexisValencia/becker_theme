<div class="fixed z-10 inset-0 overflow-y-auto c-modal hidden" id="modal-rules-challenge" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0 mt-16 lg:mt-0">

    <div class="fixed inset-0 bg-modal-blur" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-sm sm:w-full">
      <div class="bg-modal-rules-challenge px-6 pt-3 pb-6">
        <div class="text-xl text-white text-fourth font-bold text-right cursor-pointer" data-close="modal-rules-challenge">X</div>
        <div class="sm:flex sm:items-start">
          {% for item in challenge_rules %}
          <div class="mt-3 sm:mt-0 c-modal__rules">
            <h3 class="text-lg leading-6 font-medium text-white" id="modal-title">
            {{ item.title_rule_game }} 
            </h3>
            <ol class="text-white text-sm font-normal mt-4 list-decimal">
              {{ item.rules_game | raw }}
            </ol>
            <div class="w-full text-center pt-2">
                <button class="uppercase text-black bg-white py-2 px-4" data-close="modal-rules-challenge">{{ item.button_title }}</button>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div> 