<div class="p-profile-edit relative">
  <section class="relative mb-12 lg:mb-0">
    <div class="flex h-screen items-center">
      <picture>
        <source media="(max-width:768px)" srcset="/{{ directory }}/front-src/img/tmp/banner-challege-mobile.png">
        <img class="absolute h-full inset-0 md:object-center mt-12 object-cover object-right -z-1 top-0 w-full"
             src="{% if form.background_banner_profile %}{{ form.background_banner_profile }}{% else %}/{{ directory }}/front-src/img/tmp/banner-edit-profile.png{% endif %}"
             alt="Tú también puedes ser embajador de Becker">
      </picture>
      <div class="p-profile__information hidden lg:block">
        <div class="relative top-36 profile-float">
          <div>
            <div class="absolute left-0 right-0 -top-8">
              <img
                src="{{ profile_object.field_picture.value ? file_url(profile_object.field_picture.entity.getFileUri()) :
                form.image_default_profile  }}" alt="Perfil Becker"
                data-element="preview-image-file" class="h-16 w-16 rounded-full mx-auto object-cover">
            </div>
            <h3 class="pt-10 text-sm text-center font-fourth font-bold">Hola,</h3>
            <h3 class="text-sm text-center pb-4 font-fourth font-bold">{{ profile.nikname }}</h3>
            <div class="text-center h-10 relative">
              <label for="photo-profile">Subir fotos</label>
              <input type="file" class="visually-hidden" id="photo-profile" data-element="image-file-input"/>
            </div>
          </div>
        </div>
      </div>
      <div class="p-profile__information-mobile lg:hidden flex absolute text-white items-center w-full py-2 z-10">
        <div class="w-1/4">
          <img src="{{ profile_object.field_picture.value ? file_url(profile_object.field_picture.entity.getFileUri()) :
            form.image_default_profile  }}" alt="Perfil Becker"
               class="h-12 w-12 rounded-full mx-auto object-cover">
        </div>
        <div class="w-2/3">
          <h3 class="pt-2 text-xs pb-1">{{ profile.nikname }}</h3>
          <p class="text-xxs mb-2">{{ profile.description }}</p>
        </div>
        <div class="w-1/4">
          <p class="font-bold text-xs font-fourth cursor-pointer text-center pr-1" data-open="modal-rules-challenge">
            Reglas del juego<img src="/{{ directory }}/front-src/img/icon-info.svg"
                                 alt="Becker informacion reglas del juego" class="w-4 h-4 mx-auto mt-1"/></p>
        </div>
      </div>
      <div class="form-ambassador lg:w-2/6 mx-auto lg:mt-24 mt-44 pb-8 pt-4 px-6 text-white">
        <h3 class="font-bold leading-none my-4 text-lg tracking-wider">Editar Mi Perfil</h3>

        <div class="flex flex-wrap space-x-2 box-personal">
          {{ form.name }}
          {{ form.field_apellido }}
        </div>
        <div class="flex flex-wrap space-x-2 box-personal">
          {{ form.field_genero }}
          {{ form.nickname }}
        </div>
        {{ form.email }}
        <label>Ingresa tu fecha de Nacimiento</label>
        <div class="flex flex-wrap">
          {{ form.field_fecha_nacimiento }}
        </div>
        {{ form.description }}
        {{ form.form_build_id }}
        {{ form.form_token }}
        {{ form.form_id }}
        {{ form.lat }}
        {{ form.lng }}
        {{ form.submit }}
      </div>
    </div>
  </section>
  <div class="absolute h-full w-full top-12 lg:top-0 hidden" id="modal-general" aria-labelledby="modal-general-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-48 lg:pb-20 text-center sm:block sm:p-0">

      <div class="absolute inset-0 bg-modal-blur" aria-hidden="true"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
      <div class="inline-block align-bottom bg-white text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-xs sm:w-1/4">
        <div class="bg-modal-thanks px-6 pt-3 pb-6">
          <div class="text-xl text-white text-fourth font-bold text-right cursor-pointer" data-close="modal-general">X</div>
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:text-left">
              <h3 class="text-lg leading-6 font-medium text-white text-center" id="modal-general-title"></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
