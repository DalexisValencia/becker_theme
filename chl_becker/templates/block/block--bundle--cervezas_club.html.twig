{{ attach_library("cenas_virtuales/slick") }}
<section class="content-04 cl-bg-white lg:cl-pt-4 lg:cl-pt-4 cl-bg-cover">
  <div class="cl-container cl-mx-auto">
    {# slider store #}
    <div class="slider-content04">

      {% for item in content.field_content_beers %}
        {% if item.entity %}

        <div class="cl-mx-w-lg cl-pb-0 lg:cl-flex">

          <div class="cl-mx-auto md:cl-w-9/12 lg:cl-w-5/12">

            <div class="cl-relative">

             {# brand #}
              <div class="logo cl-flex cl-items-center cl-justify-between md:cl-hidden ">
                  <img src="//{{ directory }}/dist/img/tapit-logo.png" alt="logo tapit" title="logo tapit">
                  <a class="tapit-link cl-font-bold cl-text-black cl-text-xl cl-underline" href="https://tienda.clubcolombia.com.co/" target="_blank"> Tienda </a>
              </div>
              {# brand #}

              {# navigation #}
              <nav class="slider-store__slider cl-flex cl-absolute cl-z-20 cl-bottom-0 cl-pl-10 cl-pb-24">
                  <a class="slider-store-images__prev cl-cursor-pointer cl-block cl-bg-c3 cl-flex cl-items-center cl-justify-center cl-text-2xl cl-w-10 cl-mr-2 cl-h-12 cl-rounded-none" href="#">
                    <img src="data:image/svg+xml;base64,"  alt="slider-store" title="slider-store" />
                  </a>

                  <a class="slider-store-images__next cl-cursor-pointer cl-block cl-bg-c3 cl-flex cl-items-center cl-justify-center cl-text-2xl cl-w-10 cl-h-12 cl-rounded-none" href="#">
                     <img src="data:image/svg+xml;base64," alt="slider-store" title="slider-store"/>
                </a>
              </nav>
              {# navigation #}


              {# image slider #}
              <div class="slider-store-images cl-relative">

                {% for image in item.entity.field_image_multiple %}
                  <div class="slider-store-image__content">
                    <img src="{{ file_url(image.entity.uri.value) }}" alt="{{ image.alt }}" title="{{ image.alt }}" />
                  </div>
                {% endfor  %}

              </div>
              {# image slider #}
            </div>
          </div>

          <div class="md:cl-w-1/2 cl-mx-auto lg:cl-w-7/12 cl-flex cl-items-center lg:cl-pl-20 xl:cl-pl-40">
            <div class="cl-mt-8 md:cl-mt-0 cl-max-w-sm cl-text-gray-500">

              <div class="logo cl-text-left cl-mb-4 xl:cl-mb-8 cl-hidden cl-items-center cl-justify-between md:cl-flex">
                <img src="//{{ directory }}/dist/img/tapit-logo.png" alt="Tapit" title="Tapit">
                <a class="tapit-link cl-font-bold cl-text-black  cl-text-xl cl-underline" href="https://tienda.clubcolombia.com.co/" target="_blank"> Tienda </a>
              </div>

              <hgroup class="cl-text-gray-800">
                <h3 class="cl-font-light cl-text-3xl cl-leading-10 cl-max-w-sm">
                  {{ item.entity.field_title_beer.value }}
                </h3>
                <p class="cl-text-base cl-font-light cl-text-gray-600">
                  {{ item.entity.field_sub_title.value }}
                </p>
              </hgroup>
              <p class="price cl-text-gray-800 cl-my-8">
                <b class="cl-block cl-font-bold cl-text-3xl ">
                  $ {{ item.entity.field_price.value | number_format(0, '.', '.') }}
                </b>
                <i class="cl-block cl-font-light cl-text-xl cl-line-through cl-text-blue-300 cl-not-italic">
                 $ {{ item.entity.field_price_before.value | number_format(0, '.', '.') }}
                </i>
              </p>

              {# description #}
               {{ item.entity.field_content.value | raw }}
              {# description #}

              {% set uri = item.entity.field_link.uri|split('internal:') %}
              {% set uri = uri[1] ? uri[1] : uri[0] %}

              <div class="cl-my-8 cl-flex cl-justify-center md:cl-justify-start">
                <a class="cl-bg-transparent cl-border cl-border-c1 cl-text-center cl-cursor-pointer cl-text-c1 cl-px-8 cl-py-4 cl-w-auto cl-rounded cl-inline-block" href="{{ uri }}">
                  {{ item.entity.field_link.title }}
                </a>
              </div>

              {# cart option #}
              <div class="cl-flex-col md:cl-flex-row cl-hidden">
                <div class="select-store">
                  <label class="cl-text-gray-600 cl-text-xl" for="store-item">Cantidad:</label>
                  <select class="cl-form-select cl-mt-8 store-item cl-border-0">
                    <option value="item">1</option>
                    <option value="item">2</option>
                    <option value="item">3</option>
                    <option value="item">4</option>
                    <option value="item">5</option>
                  </select>
                </div>
              </div>
              {# cart option #}

            </div>
          </div>
        </div>

        {% endif %}

      {% endfor %}

    </div>
    {# slider store #}
  </div>
</section>
