                      <span class=""><svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3.6 0V1.9H14.931L0 17.6605L1.269 19L16.2 3.2395V15.2H18V0H3.6Z" fill="white"/>
                      </svg></span>
                    </a>
                  </div>
                </div>
                <div class="lg:flex">
                  <img data-animation-in="bounceInLeft" class="lg:w-11/12 lg:p-20 lg:mt-6 pl-2 pr-5 relative z-10" src="{{item_slide.image_desktop}}" alt="{{item_slide.image_desktop_alt}}">
                  <!--<img src="{{item_slide.image_mobile}}" alt="{{item_slide.image_mobile_alt}}">-->
                </div>
            
              </div>

            {% endif %}



        </div>
        {% endfor %}
      </div>
  {% endfor %}
</section>
{# FIN #}



