{# COMPONENTE BANNER PRINCIPAL PROMOCIONES #}
{# ESTE COMPONENTE TIENE CONDICIONALES DEPENDIENDO
EL CONTENIDO DE PRODUCTO QUE SE AGREGUE SE MOSTRARA UNO O EL OTRO #}
<section class="component-banner-principal banner-promotions container mx-auto pt-36 lg:pt-0">
  {% for item in banner_principal_promotions %}
    <div class="slider_banner_principal">
      {% for item_slide in item['slides'] %}
        <div class="slide_promotions">
          {% if item_slide.type_product == "products_beer" %}
          <div class="items-center flex">
            <div class="pl-8 lg:pl-0 git lg:w-7/12 md:w-7/12 w-4/6 xl:w-5/12 z-20 flex">
              <div class="text-white">
               <span data-animation-in="fadeInLeft" class="lg:text-base text-xs">{{ item_slide.subtitle_product }}</span>
                <h2 data-animation-in="fadeInRight" class="leading-none lg:text-7xl text-3xl">{{ item_slide.name_product }}</h2>
                  <p data-animation-in="fadeInLeft" class="pt-4 text-xs lg:w-8/12 w-full">{{ item_slide.description_product }}</p>

                  <div class="flex lg:mt-4 mt-6">
                    <p data-animation-in="fadeInLeft" class="font-secondary leading-6 lg:mr-10 mr-6 text-3xl">{{ item_slide.ibu }}
                      <span data-animation-in="fadeInRight" class="text-xs uppercase block">ibu</span>
                    </p>
                    <p data-animation-in="fadeInLeft" class="font-secondary leading-6 lg:mr-10 mr-6 text-3xl">{{ item_slide.abv }}
                      <span data-animation-in="fadeInRight" class="text-xs uppercase block">abv</span>
                    </p>
                    <p data-animation-in="fadeInLeft" class="font-secondary leading-6 text-3xl">{{ item_slide.cc }}
                      <span data-animation-in="fadeInRight" class="text-xs uppercase block">cc</span>
                    </p>
                  </div>
                  <a data-animation-in="fadeInUp" href="{{item_slide.url_link}}" class="bg-secondary c-button flex items-center justify-between my-3 px-3 py-2 text-xs uppercase w-36">{{item_slide.name_link}}
                    <span class=""><svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3.6 0V1.9H14.931L0 17.6605L1.269 19L16.2 3.2395V15.2H18V0H3.6Z" fill="white"/>
                      </svg></span>
                  </a>
              </div>
            </div>
            <div class="lg:flex">
              <img data-animation-in="fadeInUp" class="lg:w-11/12 lg:p-20 lg:mt-6 pl-2 pr-5 relative z-10" src="{{item_slide.image_desktop}}" alt="{{item_slide.image_desktop_alt}}">
              <!--<img src="{{item_slide.image_mobile}}" alt="{{item_slide.image_mobile_alt}}">-->
            </div>
        
          </div>
            {% elseif item_slide.type_product == "products_merchandising" %}

              <div class="items-center flex">
                <div class="pl-8 lg:pl-0 lg:w-7/12 md:w-7/12 w-4/6 xl:w-5/12 z-20 flex">
                  <div class="text-white">
                    <span data-animation-in="fadeInLeft" class="lg:text-base text-xs">{{ item_slide.subtitle_product }}</span>
                    <h2 data-animation-in="fadeInRight" class="leading-none lg:text-7xl text-3xl">{{ item_slide.name_product }}</h2>
                    <p data-animation-in="fadeInLeft" class="pt-4 text-xs lg:w-8/12 w-full">{{ item_slide.description_product }}</p>

                    <a data-animation-in="fadeInUp" href="{{item_slide.url_link}}" class="bg-secondary c-button flex items-center justify-between my-3 px-3 py-2 text-xs uppercase w-36">{{item_slide.name_link}}
                      <span class=""><svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3.6 0V1.9H14.931L0 17.6605L1.269 19L16.2 3.2395V15.2H18V0H3.6Z" fill="white"/>
                      </svg></span>
                    </a>
                  </div>
                </div>
                <div class="lg:flex">
                  <img data-animation-in="fadeInUp" class="lg:w-11/12 lg:p-20 lg:mt-6 pl-2 pr-5 relative z-10" src="{{item_slide.image_desktop}}" alt="{{item_slide.image_desktop_alt}}">
                  <!--<img src="{{item_slide.image_mobile}}" alt="{{item_slide.image_mobile_alt}}">-->
                </div>
               
              </div>

            {% else %}

              <div class="items-center flex">
                <div class="pl-8 lg:pl-0 lg:w-7/12 md:w-7/12 w-4/6 xl:w-5/12 z-20 flex">
                  <div class="text-white">
                    <span data-animation-in="fadeInLeft" class="lg:text-base text-xs">{{ item_slide.subtitle_product }}</span>
                    <h2 data-animation-in="fadeInRight" class="leading-none lg:text-7xl text-3xl">{{ item_slide.name_product }}</h2>
                    <p data-animation-in="fadeInLeft" class="pt-4 text-xs lg:w-8/12 w-full">{{ item_slide.description_product }}</p>

