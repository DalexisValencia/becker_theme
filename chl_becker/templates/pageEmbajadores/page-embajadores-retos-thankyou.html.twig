<div class="p-profile">
  {% for item in challenge_thankyou %}
    <section class="relative mb-12 lg:mb-0">
      <div class="flex h-screen items-center" id="btn-hero-video">
        <picture>
          <source media="(max-width:768px)" srcset="{{ item.img_mobile }}">
          <img
            class="absolute h-full inset-0 md:object-center mt-12 object-cover object-right banner-promo-background top-0 w-full"
            src="{{ item.img_desktop }}" alt="{{ item.img_desktop_alt }}">
        </picture>
        <div class="flex text-white mt-56 lg:mt-8 justify-center">
          <div class="lg:w-3/5 md:w-2/3 lg:ml-24">
            <h2 data-aos="fade-right"
                class=" leading-tight lg:ml-16 ml-8 text-2xl lg:text-4xl uppercase">{{ item.title }}</h2>
            <p class="font-third lg:ml-16 ml-8 py-4 relative">{{ item.description }}</p>
            <a data-element="cta-embajadores-banner" data-animation-in="fadeInUp"
               href="{{ path('ch_becker.embajadores.profile') }}"
               class="bg-secondary c-button flex items-center justify-between my-3 px-3 py-2 text-xs uppercase lg:w-40 w-48 lg:ml-16 ml-8 relative">Regresar
              <span>
							<svg width="18" height="19" viewbox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M3.6 0V1.9H14.931L0 17.6605L1.269 19L16.2 3.2395V15.2H18V0H3.6Z" fill="white"/>
							</svg>
						</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  {% endfor %}
</div>
